#include <iostream>
int main(){
	int a, b;
	a=10;
	b=20;  //puts

	void troca(int n1, int n2){
	int aux;
	aux = n1;
	n1=n2;
	n2=aux; //hangloosers
	cout<<n1<<' '<<n2;
	}

	troca(a,b);
	cout<<a<<b;

}



ILUSTRAÇÃO (até //puts)

a  |_________10__________| #1
b  |_________20__________| #2
c  |_____________________| #3
.............................
.............................
n1 |_________10__________| #10
n2 |_________20__________| #11
aux|_____________________| #12



ILUSTRAÇÃO (até //hangloosers)

a  |_________10__________| #1
b  |_________20__________| #2
c  |_____________________| #3
.............................
.............................
n1 |_________20__________| #10
n2 |_________10__________| #11
aux|_________10__________| #12








#include <iostream>
int main(){
	int a, b;
	a=10;
	b=20;  //puts

	void troca(int *n1, int *n2){
	int aux;
	aux = *n1; //hangloosers
	*n1 = *n2;
	*n2=aux; //ehmolekkkjk
	cout<<n1<<' '<<n2; //ahpronto
	}

	troca(&a,&b);
	cout<<a<<b;

}



ILUSTRAÇÃO (até //puts)

a  |_________10__________| #1
b  |_________20__________| #2
c  |_____________________| #3
.............................
.............................
n1 |_____________________| #10
n2 |_____________________| #11
aux|_____________________| #12



ILUSTRAÇÃO (até //hangloosers)

a  |_________10__________| #1
b  |_________20__________| #2
c  |_____________________| #3
.............................
.............................
n1 |_________#1__________| #10
n2 |_________#2__________| #11
aux|_________10__________| #12


ILUSTRAÇÃO (até //ehmolekkkjk)

a  |_________20__________| #1
b  |_________10__________| #2
c  |_____________________| #3
.............................
.............................
n1 |_________#1__________| #10
n2 |_________#2__________| #11
aux|_________10__________| #12


ILUSTRAÇÃO (até //ahpronto)

a  |_________20__________| #1
b  |_________10__________| #2
