#include <iostream>
int main(){
	int a, b;
	int *P1, *P2;

	a=10;
	b=20;
	
	P1=&a;
	P2=P1;  //puts

	cout<<*P1;  //imprime o conteúdo apontado por P1

	*P1++;  //alal

	P2=3; (dá ruim)
	*P2=3;  //xesque

	P2++;   //P2 passa a apontar para a próxima localidade
	P3++; (dá ruim)	
}





ILUSTRAÇÃO (até //puts)

a  |_________10__________| #1
b  |_________20__________| #2
c  |_____________________| #3
.............................
.............................
P1 |_________#1__________| #10
P2 |_________#1__________| #11
P3 |_____________________| #12




ILUSTRAÇÃO (até //alal)

a  |_________11__________| #1
b  |_________20__________| #2
c  |_____________________| #3
.............................
.............................
P1 |_________#1__________| #10
P2 |_________#1__________| #11
P3 |_____________________| #12



ILUSTRAÇÃO (até //xesque)

a  |_________3___________| #1
b  |_________20__________| #2
c  |_____________________| #3
.............................
.............................
P1 |_________#1__________| #10
P2 |_________#1__________| #11
P3 |_____________________| #12
