#include <iostream>
int main(){
	int n;
	cin>>n;
	int mat[n][n];
	int **mat;
	mat=(int**)malloc(sizeof(int*)*n);
	for(int i=0; i<n; i++){
		mat[i]=(int*)malloc(sizeof(int)*n);
	}
	for(int i=0; i<n; i++){
		free(mat[i]);
	}
	free(mat);
}



ILUSTRAÇÃO (até //)

